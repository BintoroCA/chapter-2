        <!-- form to add project start -->
        <div class="mx-auto" style="width:fit-content; display:block; margin:50px auto;">
            <h1 class="fw-bold">ADD MY PROJECT</h1>
        </div>
        <form style="max-width: 800px; margin:0 auto;" class="fs-2">
  <div class="mb-3">
    <label for="project-name" class="form-label">Project Name</label>
    <input type="text" class="form-control fs-2" id="projectName">
  </div>
  <div class="row g-3 mb-3">
  <div class="col">
      <label for="start-date" class="form-label">Start Date</label>
    <input type="date" class="form-control fs-2" aria-label="Start Date">
  </div>
  <div class="col">
    <label for="end-date" class="form-label">End Date</label>
    <input type="date" class="form-control fs-2" aria-label="End Date">
  </div>
</div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input type="text-area" class="form-control fs-2" id="description">
  </div>
<p>Technologies</p>
<div class="d-flex flex-wrap g-3">
  <div class="col-6 mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="nodeJs">
    <label class="form-check-label" for="Technologies">Node Js</label>
  </div>
  <div class="col-6 mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="nextJs">
    <label class="form-check-label" for="Technologies">Next Js</label>
  </div>
  <div class="col-6 b-3 form-check">
    <input type="checkbox" class="form-check-input" id="reactJs">
    <label class="form-check-label" for="Technologies">React Js</label>
  </div>
  <div class="col-6 mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="typeScript">
    <label class="form-check-label" for="Technologies">TypeScript</label>
  </div>
</div>
  <p>Upload Image</p>
<div class="input-group">
  <input type="file" class="form-control fs-2" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
</div>
<div class="d-flex flex-row-reverse">
 <a style="margin-left: auto;" type="submit" class="btn btn-primary my-5 fs-2">Submit</a>
 </div>
</form>
